generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  output        = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EquipmentCategory {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  equipment Equipment[]
}

model Equipment {
  id         Int               @id @default(autoincrement())
  categoryId Int
  name       String            @unique
  image      String
  createdAt  DateTime          @default(now())
  items      Item[]
  category   EquipmentCategory @relation(fields: [categoryId], references: [id])
}

model Item {
  id          Int      @id @default(autoincrement())
  equipmentId Int
  errors      String[]
  notes       String[]
  status      String
  createdAt   DateTime @default(now())

  equipment Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  loans        Loan[]
  activeLoanId Int?   @unique
  activeLoan   Loan?  @relation("ActiveLoan", fields: [activeLoanId], references: [id])
}

model Session {
  id         String   @id
  secretHash Bytes
  createdAt  DateTime @default(now())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}

model User {
  id             Int       @id @default(autoincrement())
  hashedPassword String
  username       String    @unique
  createdAt      DateTime  @default(now())
  latestActivity DateTime  @default(now())
  sessions       Session[]
  loans          Loan[]
}

model Borrower {
  id           Int      @id @default(autoincrement())
  name         String
  phone        String?  @unique
  email        String?  @unique
  note         String?
  creationDate DateTime @default(now())
  loans        Loan[]
}

model Loan {
  id         Int      @id @default(autoincrement())
  startDate  DateTime
  endDate    DateTime
  status     String
  borrower   Borrower @relation(fields: [borrowerId], references: [id])
  borrowerId Int
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  item       Item     @relation(fields: [itemId], references: [id])
  itemId     Int

  activeFor Item? @relation("ActiveLoan")
}
